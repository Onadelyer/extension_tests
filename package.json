{
  "name": "extension-test",
  "displayName": "extension_test",
  "description": "VSCode extension with React webview in activity bar",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:extension-test.diagramEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension-test.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension-test.createDiagram",
        "title": "Create Diagram"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extension-test-sidebar",
          "title": "Extension Test",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "extension-test-sidebar": [
        {
          "type": "webview",
          "id": "extension-test.menuView",
          "name": "Menu View"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "extension-test.diagramEditor",
        "displayName": "Diagram Editor",
        "selector": [
          {
            "filenamePattern": "*.diagram"
          }
        ],
        "priority": "default"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "extension-test-sidebar",
          "title": "Extension Test",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "extension-test-sidebar": [
        {
          "type": "webview",
          "id": "extension-test.menuView",
          "name": "Menu View"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile && yarn run build-webview && yarn run build-editor",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "vscode-test",
    "build-webview": "cd webview-ui && yarn install && yarn build",
    "build-editor": "cd editor-ui && yarn install && yarn build"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}